<?xml version="1.0"?>
<odoo>
  <data>
    <!-- Tree view -->
    <record id="hospital_patient_appointment_view_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
        <!-- 
          create = "0" delete = "0"
          will remove create and delete button from tree view
         -->
          <tree create = "0" delete = "0">
            <field name="patient_id"/>
            <field name = "ref" />
            <field name = "appointment_time" />
            <field 
              name = "state"
              widget = "badge"
              decoration-success = "state == 'done'"
              decoration-danger = "state == 'cancel'"
              decoration-info = "state in ('draft','in_consultiation')"
              />
          </tree>
        </field>
    </record>
    <!-- Search view -->
    <record id="hospital_patient_appointment_view_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
          <search>
          </search>
        </field>
    </record>
    <!-- Form view -->
    <record id="hospital_patient_appointment_view_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
              <header>
                <field name = "state" widget = "statusbar" nolabel = "1" options = "{'clickable': '1'}" statusbar_visible = "draft,in_consultiation,done, cancel"/>
              </header>
              <sheet>
                <div>
                  <h1>
                    <field name = "priority" widget = "priority" class = "mr-3" />
                  </h1>
                </div>
                <group>
                  <group>
                    <field name="patient_id"/>
                    <field name = "ref" />
                      <field name = "gender" />
                  </group>
                  <group>
                    <field name = "appointment_time" />
                    <field name = "booking_time" />
                    <button 
                      name = "test_action"
                      string = "Show Rainbow"
                      help = "help message"
                      confirm = "Are you sure to click?"
                      type = "object"
                      class = "oe_highlight"
                    />
                    <button 
                      name = "%(odoo_learning_hospital_management.action_hospital_patient)d"
                      string = "Big button"
                      help = "help message"
                      confirm = "Are you sure to click?"
                      type = "action"
                      class = "oe_highlight"
                    />
                  </group>
                </group>
                <notebook>
                  <page string = "Prescription" name = "Prescription">
                    <group>
                      <field name = "prescription" placeholder = "Enter your perscription here!"/>
                    </group>
                  </page>
                  <page string = "Pharmacy" name = "Pharmacy">
                    <group>
                    </group>
                  </page>

                </notebook>
              </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient_appointment" model="ir.actions.act_window">
      <field name="name">Appointment</field>
      <field name="res_model">hospital.appointment</field>
      <field name="view_mode">tree,search,form</field>
      <!-- Add default search, when redirect to current addon -->
      <field name="context"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new patient here!
            </p>
            <p>
            Add new patient here!
            </p>
        </field>
    </record>
  </data>
</odoo>