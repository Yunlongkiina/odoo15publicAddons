<?xml version="1.0"?>
<odoo>
  <data>
    <!-- Tree view -->
    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="age"/> 
            <field name = "gender"/>
          </tree>
        </field>
    </record>
    <!-- Search view -->
    <record id="hospital_patient_view_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
          <search>
            <field name="name" string = "patient name" filter_domain = "['|',('name','ilike',self),('age','ilike',self)]"/>
            <field name="age"/> 
            <field name = "gender"/>
            <filter name = "filter_male" string= "Male" domain = "[('gender', '=', 'male')]"/>
            <!-- use and search -->
            <separator/>
            <filter name = "filter_female" string= "Female" domain = "[('gender', '=', 'female')]"/>
            <filter name = "filter_kids" string= "Kids" domain = "[('age', '&lt;', '5')]"/>
            <separator/>
            <filter name = "filter_archived" string= "Archived" domain = "[('active', '=', 'False')]"/>
            
            <group expand = "0" string = "Group By">
              <filter name = "groupByGender" string = "Gender"  context = "{'group_by':'gender'}"/>
            </group>
          </search>
        </field>
    </record>
    <!-- Form view -->
    <record id="hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
              <sheet>
                <group>
                  <group>
                    <field name="name"/>
                    <field name="age"/> 
                  </group>
                  <group>
                    <field name = "ref"/>
                    <field name = "gender"/>
                    <field name = "active" invisible = "1"/>
                  </group>
                </group>

              </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
      <field name="name">Patients</field>
      <field name="res_model">hospital.patient</field>
      <field name="view_mode">tree,search,form</field>
      <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new patient here!
            </p>
            <p>
            Add new patient here!
            </p>
        </field>
    </record>
  </data>
</odoo>